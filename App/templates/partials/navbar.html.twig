            {% if request.hasRole(1) or request.hasRole(2) or request.hasRole(3) %}
                <span class="nav-links" data-page="gestion"><a href="/gestion" {% if current_path|slice(0, 8) == '/gestion' %}class="selected"{% endif %}>Gestion</a></span>
